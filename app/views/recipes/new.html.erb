<%= form_for @recipe do |f| %>
  <%= f.label "Recipe title:" %>
  <%= f.text_field :title %><br/>
  
  <%= f.fields_for :ingredients do |food| %>
    <%= food.label :name %>
    <%= food.text_field :name %><br>
  
    <%= food.label :quantity %>
    <%= food.text_field :quantity %><br>
 <% end %>

    <%= f.submit %>
<% end %>
